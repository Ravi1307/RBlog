
<%= content_tag(:div, :id => 'rblog_menu') do %>
	
	<%= content_tag(:div, :id => 'rblog_menu_account') do %>
		
		<%= content_tag(:ul) do %>
			
			<%= content_tag(:li) do %>
        			
        		<% if @currentPage == 'login' %>
	        		
    				<%= link_to('Sign Up', {:controller => 'account', :action => 'new'}) %>
					
				<% else %>
					
					<%= link_to((session[:userStatus] ? session[:userStatus] : 'Log In'), {:controller => 'account', :action => (session[:userAction] ? session[:userAction] : 'login'), :user => (session[:userId] ? getUsername(session[:userId]) : nil)}) %>
					
				<% end %>
				
			<% end %>
			
		<% end %>
		
	<% end %>
	
	<%= content_tag(:ul) do %>
   		
   		<%= content_tag(:li, link_to("Home", {:controller => 'posts', :action => 'home'}, :id => ((@currentPage == 'home') ? 'current' : 'other'))) %>
   		<%= content_tag(:li, link_to("Sitemap", {:controller => 'posts', :action => 'site_map'}, :id => ((@currentPage == 'site_map') ? 'current' : 'other'))) %>
   		<%= content_tag(:li, link_to("About", {:controller => 'posts', :action => 'about'}, :id => ((@currentPage == 'about') ? 'current' : 'other'))) %>
   		<%= content_tag(:li, link_to("Contact", {:controller => 'posts', :action => 'contact'}, :id => ((@currentPage == 'contact') ? 'current' : 'other'))) %>
		
	<% end %>
	
<% end %>
