
<%= content_tag(:div, :id => 'comment_form') do %>
    
    <%= form_for(:comment, :url => {:controller => 'comments', :action => 'create', :user => session[:userId]}, :method => :post, :remote => true) do |form| %>
        
        <%= form.text_field(:post_id, :hidden => true, :value => post.id) %>
        <%= form.text_field(:account_id, :hidden => true, :value => session[:userId]) %>
        <%= form.text_area(:comment_message, :placeholder => 'Write a comment...', :class => 'comment_message', :required => true) %>
        <%= form.submit('Post Comment', :class => 'comment_post') %>
        
    <% end %>
    
<% end %>
