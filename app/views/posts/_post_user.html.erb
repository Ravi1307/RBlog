
<%= content_tag(:li) do %>
	
	<%= link_to([post_counter + 1, post.post_title.first(45)].join('. ').concat((post.post_title.length > 45) ? '...' : ''), {:controller => 'posts', :action => 'show', :user => post.account.username, :postId => post.id}, :class => 'left') %>
	<%= link_to(image_tag('/assets/rblog_delete', :alt => 'Delete'), {:controller => 'posts', :action => 'destroy', :user => post.account.username, :postId => post.id}, :class => 'right delete', :method => :delete, :data => {:confirm => 'Are you sure?'}) %>
	<%= link_to(image_tag('/assets/rblog_edit', :alt => 'Edit'), {:controller => 'posts', :action => 'edit', :user => post.account.username, :postId => post.id}, :class => 'right edit') %>
	
<% end %>
